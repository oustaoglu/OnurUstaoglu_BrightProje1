@model ProductViewModel
<div class="card h-100" style="width:350px; height:200px">
	<!-- Sale badge-->
	<div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
	<!-- Product image-->
	<a asp-area="" asp-controller="EducationApp" asp-action="ProductDetails" asp-route-url="@Model.Url">
		<img src="~/images/onur/@Model.ImageUrl" class="card-img-top" style="width:348px; height:200px" />
	</a>
	<!-- Product details-->
	<div class="card-body">
		<div class="text-center">
			<!-- Product name-->
			<h5 class="card-title">@Model.Name</h5>
			<h4>@($"{Model.Price:C0}")</h4>
		</div>
	</div>
	<!-- Product actions-->
	<div class="d-flex justify-content-center m-1">
		<button class="btn btn-outline-dark btn-xl" style="cursor:default !important" ;>Sepete Ekle</button>
	</div>
</div>

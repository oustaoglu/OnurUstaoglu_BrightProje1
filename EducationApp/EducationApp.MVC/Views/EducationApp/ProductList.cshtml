@model List<ProductViewModel>
@{
    ViewData["Title"] = "Education Ana Sayfa";
}
<div class="row">
    <div class="col-2 mt-4">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="col-10">
        <div class="row g-3">
            @foreach (var productViewModel in Model)
            {
                <div class="col-4 mt-5">
                    @await Html.PartialAsync("_ProductPartial",productViewModel)
                </div>
            }
        </div>
    </div>

</div>
